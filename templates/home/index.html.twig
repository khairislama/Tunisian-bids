{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
{% if app.user %}
<h1>Welcome {{ app.user.username }}</h1>
<img class="rounded-circle" style="width: 30px;  height:30px" src="{{ vich_uploader_asset(app.user , 'imageFile') }}"></img>
<p>To show all products :  </p>
<a href="/products" class="mb-5">cliquer ici</a>
<br>
<p>To show your products</p>
<a href="/my/products" class="mb-5">cliquer ici</a>
<br>
<a class="btn btn-danger mt-5" href="/logout" >Logout</a>

{% else %}
<a class="btn btn-primary" href="/login">login</a>
{% endif %}
</div>
{% endblock %}
